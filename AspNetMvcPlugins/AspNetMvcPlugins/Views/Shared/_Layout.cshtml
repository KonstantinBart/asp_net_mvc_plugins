<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Plugins</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <h3>Поиск файлов на диске</h3>
    </div>
@*    <div id="nav">
        @Html.ActionLink("Home","Index","Home", new {Area=""}, null)
    </div>*@

    <ul>
    @{
        var modules = DependencyResolver.Current.GetServices<Domain.Common.IPluginModule>();   
    }
    @foreach (var plugin in modules)
    {
        <li>
            @Html.ActionLink(plugin.Name, "Index", plugin.ControllerName, null, new { @class = "truncate", title = plugin.Name })
        </li>
    }
    </ul>

    <hr />
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>